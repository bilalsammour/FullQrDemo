<Window x:Class="QrDemoWindows.WriterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Writer" Height="600" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="12">
            <TextBox x:Name="CodeText" Margin="6" Text="Code Here" />
            <Image Name="QrCodeImage" Margin="6" Width="300" Height="300" />
            <Button Margin="6" Content="Go" Click="Go_Click" />
        </StackPanel>
    </Grid>
</Window>
